<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:padding="16dp">

    <!-- Header -->
    <TextView
        android:id="@+id/forgotPasswordTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Parolni tiklash"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:fontFamily="sans-serif-condensed" />

    <!-- Email -->
    <EditText
        android:id="@+id/emailInput"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Email"
        android:textColor="#FFFFFF"
        android:textColorHint="#B0FFFFFF"
        android:background="@drawable/input_background"
        android:padding="12dp"
        android:layout_below="@id/forgotPasswordTitle"
        android:layout_marginTop="40dp"
        android:drawableStart="@android:drawable/ic_dialog_email"
        android:drawablePadding="8dp"
        android:inputType="textEmailAddress"
        android:textSize="16sp" />

    <!-- Send Code Button -->
    <Button
        android:id="@+id/sendCodeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kod yuborish"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_background"
        android:padding="12dp"
        android:layout_below="@id/emailInput"
        android:layout_marginTop="24dp"
        android:elevation="4dp" />

    <!-- Code Input -->
    <EditText
        android:id="@+id/codeInput"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Kod"
        android:textColor="#FFFFFF"
        android:textColorHint="#B0FFFFFF"
        android:background="@drawable/input_background"
        android:padding="12dp"
        android:layout_below="@id/sendCodeButton"
        android:layout_marginTop="16dp"
        android:drawableStart="@drawable/ic_key"
        android:drawablePadding="8dp"
        android:inputType="number"
        android:textSize="16sp" />

    <!-- Verify Code Button -->
    <Button
        android:id="@+id/verifyCodeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kodni tasdiqlash"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_background"
        android:padding="12dp"
        android:layout_below="@id/codeInput"
        android:layout_marginTop="16dp"
        android:elevation="4dp" />

    <!-- New Password Input -->
    <EditText
        android:id="@+id/newPasswordInput"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Yangi parol"
        android:textColor="#FFFFFF"
        android:textColorHint="#B0FFFFFF"
        android:background="@drawable/input_background"
        android:padding="12dp"
        android:layout_below="@id/verifyCodeButton"
        android:layout_marginTop="16dp"
        android:drawableStart="@android:drawable/ic_lock_idle_lock"
        android:drawablePadding="8dp"
        android:inputType="textPassword"
        android:textSize="16sp"
        android:visibility="gone" />

    <!-- Reset Password Button -->
    <Button
        android:id="@+id/resetPasswordButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Parolni o‘rnatish"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_background"
        android:padding="12dp"
        android:layout_below="@id/newPasswordInput"
        android:layout_marginTop="16dp"
        android:elevation="4dp"
        android:visibility="gone" />

    <!-- Footer -->
    <TextView
        android:id="@+id/footerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SMchat developed by FirdavsQ02 © All rights reserved"
        android:textSize="12sp"
        android:textColor="#B0FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp" />
</RelativeLayout>