<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@drawable/dialog_background"
    android:layout_gravity="center">

    <LinearLayout
        android:id="@+id/reaction_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/reaction_background"
        android:padding="4dp"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/edit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:padding="8dp"
        android:background="@drawable/button_green_oval"
        android:layout_marginHorizontal="4dp"
        android:layout_marginBottom="6dp"/>

    <Button
        android:id="@+id/delete_for_me_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete for me"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:padding="8dp"
        android:background="@drawable/button_red_oval"
        android:layout_marginHorizontal="4dp"
        android:layout_marginBottom="6dp"/>

    <Button
        android:id="@+id/delete_for_all_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete for all"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:padding="8dp"
        android:background="@drawable/button_red_oval"
        android:layout_marginHorizontal="4dp"
        android:layout_marginBottom="6dp"/>

    <Button
        android:id="@+id/copy_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Copy"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:padding="8dp"
        android:background="@drawable/button_yellow_oval"
        android:layout_marginHorizontal="4dp"/>
</LinearLayout>